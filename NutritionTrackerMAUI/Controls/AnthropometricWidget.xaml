<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionTrackerMAUI.Controls.AnthropometricWidget">

	<Frame CornerRadius="25"
           Padding="25"
           Margin="10"
           BackgroundColor="White"
           HasShadow="True">

		<VerticalStackLayout Spacing="15">

			<Label Text="Антропометрія"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#D32F2F"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />

			<BoxView HeightRequest="3" Margin="0,0,0,10">
				<BoxView.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
						<GradientStop Color="#D32F2F" Offset="0.0"/>
						<GradientStop Color="#F48FB1" Offset="1.0"/>
					</LinearGradientBrush>
				</BoxView.Background>
			</BoxView>

			<!-- Поля ввода -->
			<Grid RowSpacing="8" ColumnSpacing="10" Padding="5"
	  ColumnDefinitions="Auto,*"
	  RowDefinitions="Auto,Auto,Auto,Auto,Auto">

				<Label Text="Зріст:" Grid.Row="0" Grid.Column="0" FontSize="16" TextColor="#424242"/>
				<Entry x:Name="HeightEntry" Grid.Row="0" Grid.Column="1" Keyboard="Numeric" Placeholder="см або дюйми"/>

				<Label Text="Вага:" Grid.Row="1" Grid.Column="0" FontSize="16" TextColor="#424242"/>
				<Entry x:Name="WeightEntry" Grid.Row="1" Grid.Column="1" Keyboard="Numeric" Placeholder="кг або lbs"/>

				<Label Text="Вік:" Grid.Row="2" Grid.Column="0" FontSize="16" TextColor="#424242"/>
				<Entry x:Name="AgeEntry" Grid.Row="2" Grid.Column="1" Keyboard="Numeric"/>

				<Label Text="Стать:" Grid.Row="3" Grid.Column="0" FontSize="16" TextColor="#424242"/>
				<Picker x:Name="GenderPicker" Grid.Row="3" Grid.Column="1">
					<Picker.ItemsSource>
						<x:Array Type="{x:Type x:String}">
							<x:String>Чоловік</x:String>
							<x:String>Жінка</x:String>
						</x:Array>
					</Picker.ItemsSource>
				</Picker>

				<Label Text="Система:" Grid.Row="4" Grid.Column="0" FontSize="16" TextColor="#424242"/>
				<Picker x:Name="SystemPicker" Grid.Row="4" Grid.Column="1">
					<Picker.ItemsSource>
						<x:Array Type="{x:Type x:String}">
							<x:String>Metric</x:String>
							<x:String>Imperial</x:String>
						</x:Array>
					</Picker.ItemsSource>
				</Picker>
			</Grid>

			<Button Text="Розрахувати BMI"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    CornerRadius="15"
                    Clicked="OnCalculateClicked"/>

			<BoxView HeightRequest="2" Color="#E0E0E0" Margin="0,10"/>

			<Frame BackgroundColor="#FFF5F5" CornerRadius="20" Padding="15" HasShadow="False">
				<VerticalStackLayout Spacing="5" HorizontalOptions="Center">
					<Label x:Name="BMILabel"
                           Text="BMI: --"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#D32F2F"
                           HorizontalOptions="Center"/>

					<Label x:Name="BMICategoryLabel"
                           Text="Категорія: --"
                           FontSize="18"
                           TextColor="#424242"
                           HorizontalOptions="Center"/>
				</VerticalStackLayout>
			</Frame>

		</VerticalStackLayout>
	</Frame>
</ContentView>
